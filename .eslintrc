{
  "root": true,
  "parser": "babel-eslint",
  "plugins": [
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "eslint-config-prettier",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "arrowParens": "always",
        "semi": false,
        "trailingComma": "none",
        "tabWidth": 2,
        "endOfLine": "auto",
        "useTabs": false,
        "singleQuote": true,
        "printWidth": 120,
        "jsxSingleQuote": true
      }
    ]
  }
}